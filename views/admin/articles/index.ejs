<%-include ('../../partials/header.ejs') %> 
<body>
    <%-include ('../../partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h2>Artigos</h2>
        <a href="/admin/articles/new" class="btn btn-success">Criar um novo artigo</a>
        <hr>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>

            <tbody>
                <% articles.forEach(article => { %>
                    <tr>
                        <td><%= article.idArticle %></td>
                        <td><%= article.title %></td>
                        <td><%= article.slug %></td>
                        <td><%= article.category.title %></td>
                        <td>
                            <form method="post" action="/articles/delete" style="display: inline;" onsubmit="confirmDelete(event,this)">
                            <input type="hidden" name="id" value="<%= article.idArticle %>">
                            <button class="btn btn-danger">Deletar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>

            </tbody>

        </table>
    </div>

    

</body>
<script>

    function confirmDelete(event, form){
        event.preventDefault();
        let decision = confirm("Você deseja realmente deletar este artigo?");
        if(decision){
            form.submit();
        }
    }

</script>

